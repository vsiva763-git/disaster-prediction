# Environment Configuration Template
# Copy this file to .env and fill in your values

# Flask Configuration
FLASK_APP=src.web_app.app:create_app
FLASK_ENV=production
SECRET_KEY=your-secret-key-here-change-in-production

# Server Configuration
HOST=0.0.0.0
PORT=5000

# API Keys (if required in future)
USGS_API_KEY=
NOAA_API_KEY=
INCOIS_API_KEY=

# Model Configuration
MODEL_PATH=models/best_model.keras
MODEL_VERSION=v1.0.0

# Database (if needed for logging)
DATABASE_URL=sqlite:///tsunami_logs.db

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/tsunami_system.log

# Monitoring
ENABLE_METRICS=false
METRICS_PORT=9090

# Email Alerts (optional)
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
ALERT_EMAIL_RECIPIENTS=

# Slack/Discord Webhooks (optional)
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=
